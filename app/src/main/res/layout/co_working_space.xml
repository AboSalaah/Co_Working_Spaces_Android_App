<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/itemlinearlayout"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/co_working_space_name_text_view"
            style="@style/coworkingspace"
            />
        <ImageView
            android:layout_width="@dimen/image_school_list"
            android:layout_height="@dimen/image_school_list"
            android:id="@+id/co_working_space_logo_image_view"
            />
    </LinearLayout>
    <RatingBar
        android:id="@+id/list_view_rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:isIndicator="true"
        android:numStars="5"
        android:stepSize="0.1"
        android:rating="0"
        style="?android:attr/ratingBarStyleSmall"
        android:progressTint="@color/indigo"
        android:layout_margin="@dimen/ratingbarpadding"
        android:layout_below="@id/itemlinearlayout"
        android:layout_alignParentLeft="true"
        />


</RelativeLayout>